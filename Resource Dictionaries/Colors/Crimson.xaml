<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Active colors-->
    <SolidColorBrush x:Key="App.Background" Color="{DynamicResource LightBackground}"/>
    <SolidColorBrush x:Key="MainColor" Color="{DynamicResource Crimson}"/>
    <SolidColorBrush x:Key="OppositeRed" Color="{DynamicResource Crimson}"/>
    <SolidColorBrush x:Key="OppositeGreen" Color="{DynamicResource Green}"/>
    <SolidColorBrush x:Key="OppositeBlue" Color="{DynamicResource Navy}"/>
    <SolidColorBrush x:Key="Button.OnMouseOver" Color="{DynamicResource MouseOverCrimson}"/>
    <SolidColorBrush x:Key="Button.TextColor" Color="{DynamicResource White}"/>
    <SolidColorBrush x:Key="TextColor" Color="{DynamicResource Black}"/>
    <SolidColorBrush x:Key="Alternation1" Color="{DynamicResource LightAlt1}"/>
    <SolidColorBrush x:Key="Alternation2" Color="{DynamicResource LightAlt2}"/>
    <SolidColorBrush x:Key="Backdrop" Color="{DynamicResource LightBackdrop}"/>

</ResourceDictionary>