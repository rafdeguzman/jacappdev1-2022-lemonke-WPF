<Window x:Class="HomeBudgetWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetWPF"
        mc:Ignorable="d"
        Title="Le Monke" MinHeight="425" MaxHeight="425" MinWidth="700" MaxWidth="700">
    <StackPanel Background="{DynamicResource App.Background}">
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="Open" Click="btnOpenFile"/>
                <MenuItem Header="Save" Click="btnSaveFile" />
            </MenuItem>
            <MenuItem Header="Settings" x:Name="Settings" Click="Settings_Click"/>
            <MenuItem Header="Close All" x:Name="CloseAll" Click="btnCloseAllWindows_Click"/>
        </Menu>
        <TextBlock Foreground="{DynamicResource MainColor}" Text="OUR BUDGET APP BY MONKE" FontSize="24" FontWeight="Bold" TextAlignment="Center" FontFamily="Comic Sans MS" />
        <TextBlock Foreground="{DynamicResource TextColor}" Text="Expenses" HorizontalAlignment="Center" FontWeight="Bold" x:Name="fileName"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            <DataGrid x:Name="dataBudgetLists"  Margin="20, 10, 20, 10" Height="250" AutoGenerateColumns="False" Grid.Column="0">
                <!--For Styling-->
                <DataGrid.Resources>
                    <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                        <!--Colors-->
                        <Setter Property="Background" Value="{DynamicResource Backdrop}" />
                        <Setter Property="Foreground" Value="{DynamicResource MainColor}"/>

                        <!--Text-->
                        <Setter Property="FontWeight" Value="Bold"/>

                        <!--Text Placement-->
                        <Setter Property="Padding" Value="5"></Setter>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>

                        <!--Separators-->
                        <Setter Property="BorderThickness" Value="0,0,0,1"></Setter>
                        <Setter Property="BorderBrush" Value="{DynamicResource Backdrop}"/>
                    </Style>
                </DataGrid.Resources>
            </DataGrid>

            <Grid>

            </Grid>
        </Grid>
        <Grid Height="27" Margin="15, 5, 15, 10" Width="658">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="244*"/>
                <ColumnDefinition Width="231*" />
                <ColumnDefinition Width="195*"/>
            </Grid.ColumnDefinitions>
            <Button Style="{DynamicResource RoundedButton}" Grid.Column="0" Content="Show Categories" Click="Category_Click" Margin="5,0,5,0" />
            <Button Style="{DynamicResource RoundedButton}" Grid.Column="1" Content="Add Expense" Click="Expense_Click" Margin="5,0,5,0" />
            <Button Style="{DynamicResource RoundedButton}" Grid.Column="2" Content="Filter" Click="Expense_Click" Margin="30,0,20,0"  />
        </Grid>
    </StackPanel>
</Window>